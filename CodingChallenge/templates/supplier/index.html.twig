{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col text-center mt-4 mb-4">
            <a class="btn btn-primary" href="{{ path('create') }}">Añade un proveedor</a>
        </div>
    </div>
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success mt-4 mb-4">
                {{ message }}
            </div>
        {% endfor %}
    <table class="table table-striped">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Nombre</th>
        <th scope="col">Mail</th>
        <th scope="col">Telefono</th>
        <th scope="col">Tipo</th>
        <th scope="col">Activo</th>
        <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for data in suppliers %}
        <tr>
        <th scope="row">{{data.id}}</th>
        <td>{{data.name}}</td>
        <td>{{data.mail}}</td>
        <td>{{data.phone}}</td>
        {% if data.hotelSupplier == 1 %}
            <td>Hotel</td>
        {% elseif data.trackSupplier == 1 %}
            <td>Pista</td>
        {% else %}
            <td>Complemento</td>
        {% endif %}
        {% if data.isActive == 1 %}
            <td>Sí</td>
        {% else %}
            <td>No</td>
        {% endif %}
        <td>
            <a class="btn btn-warning" href="{{ path('update', {'id':data.id}) }}">Edita</a>
            <a class="btn btn-danger" href="{{ path('delete', {'id':data.id}) }}">Elimina</a>
        </td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
</div>
{% endblock %}
